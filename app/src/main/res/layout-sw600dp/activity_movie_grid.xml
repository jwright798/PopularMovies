<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    tools:context=".ui.MovieGridActivity">

    <fragment
        android:id="@+id/grid_fragment"
        android:name="com.udacity.jeremywright.popularmovies.ui.MovieGridActivityFragment"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_movie_grid" />

    <FrameLayout
        android:id="@+id/detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        tools:layout="@layout/fragment_movie_detail"/>

</LinearLayout>

    <!--layout idea from Sunshine app -->